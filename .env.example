# Backend API Configuration
# Copy this file to .env and update the values as needed

# API Configuration
REACT_APP_API_URL=http://127.0.0.1:8000

# Google OAuth Configuration
REACT_APP_GOOGLE_CLIENT_ID=your_google_client_id_here
REACT_APP_GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Frontend URL (for OAuth callbacks)
REACT_APP_FRONTEND_URL=http://localhost:3000

# JWT Configuration (for reference, these are typically set on the backend)
# JWT_SECRET_KEY=your_jwt_secret_key
# JWT_ACCESS_TOKEN_LIFETIME=15m
# JWT_REFRESH_TOKEN_LIFETIME=7d

# For production deployment, update these values accordingly
# REACT_APP_API_URL=https://your-production-api-url.com
# REACT_APP_FRONTEND_URL=https://your-production-frontend-url.com
# REACT_APP_ENVIRONMENT=development
